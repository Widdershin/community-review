<div class="container">

    <h1>/r/longboarding Community Reviews</h1>
    <% if current_user %>
        <p>Logged in as <%= current_user %></p>

        <%= form_tag('/reviews', method: "post") do %>
            <%= text_field_tag(:name) %>
            <%= submit_tag("Suggest") %>
        <% end %>
    <% else %>
        <p><a href='/auth/reddit'>Log in with Reddit</a> to vote and suggest reviews</p>
    <% end %>

    <h2>Suggested Reviews</h2>
    <div id="reviews">
        <% @reviews.each do |review| %>
            <div class="review">
                <% if current_user %>
                    <span class="valign-middle small-margin">
                        <i class="icon-up-open center"></i>
                        <span class="valign-middle small-text"><%= review.score %> points</span>
                    </span>
                <% end %>
                <span class="small-margin big-text valign-middle"><%= review.name %></span>
            </div>
        <% end %>
    </div>

</div>